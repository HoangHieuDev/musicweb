@page
@model music_web_app.Pages.Admin.SingerTable.IndexModel

@{
    ViewData["Title"] = "Index";
}

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/admin.css" />
    <meta charshet="utf-8" />
</head>
<body>
    <h2>Singer manager</h2>
    <div>
        <a class="btn btn-primary btn-sm" asp-page="./Create">Add new singer</a>
    </div>
    <br />
    <div>
        <table class="table table-striped table-bordered" id="myTable">
            <thead>
                <tr style="text-align:center">
                    <th>
                        @Html.DisplayNameFor(model => model.Singer[0].Avatar)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Singer[0].NameSinger)
                    </th>
                    <th style="width:110px;">
                        @Html.DisplayNameFor(model => model.Singer[0].YearOfBirth)
                    </th>
                    <th style="width:80px">
                        @Html.DisplayNameFor(model => model.Singer[0].Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Singer[0].Nationality)
                    </th>
                    <th style="width:210px">
                        @Html.DisplayNameFor(model => model.Singer[0].AddDate)
                    </th>
                    <th style="width:210px">
                        @Html.DisplayNameFor(model => model.Singer[0].UpdDate)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="myTablee">
                @foreach (var item in Model.Singer)
                {
                    <tr style="height:10px">
                        <td style="text-align:center;width:50px"><img src="@item.Avatar" style="width:35px;height:35px;border-radius:50%"></td>
                        <td>
                            @item.NameSinger
                        </td>
                        <td>
                            @item.YearOfBirth
                        </td>
                        <td>
                            @item.Gender
                        </td>
                        <td>
                            @item.Nationality
                        </td>
                        <td>
                            @item.AddDate
                        </td>
                        <td>
                            @item.UpdDate
                        </td>
                        <td style="text-align: center; width: 200px">
                            <a class="btn btn-success btn-sm" asp-page="./Edit" asp-route-id="@item.IDSinger"><i class="bi bi-pencil"></i></a>
                            <a class="btn btn-info btn-sm" asp-page="./Details" asp-route-id="@item.IDSinger"><i class="bi bi-info-square-fill"></i></a>
                            <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.IDSinger"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
</body>