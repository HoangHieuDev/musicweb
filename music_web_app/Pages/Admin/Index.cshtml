            <div class="small-box bg-info">
                <div class="inner">
                    <h3>@ViewBag.TotalSong</h3>

                    <p>Total song</p>
                </div>
                <div class="icon">
                    <i class="ion ion-music-note"></i>
                </div>
                <a href="/Admin/Songtable/Index" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>@ViewBag.TotalListen</h3>

                    <p>Total listen</p>
                </div>
                <div class="icon">
                    <i class="ion ion-headphone"></i>
                </div>
                <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
